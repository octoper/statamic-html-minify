{
    "name": "octoper/statamic-html-minify",
    "description": "An addon to minify HTML for Statamic v3",
    "keywords": [
        "octoper",
        "statamic-html-minify"
    ],
    "authors": [
        {
            "name": "Vaggelis Yfantis",
            "email": "me@octoper.me",
            "homepage": "https://octoper.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "statamic/cms": "^3.3",
        "voku/html-min": "^4.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "nunomaduro/collision": "^6.2",
        "orchestra/testbench": "^7.4",
        "pestphp/pest": "^1.21",
        "phpunit/phpunit": "^9.5",
        "spatie/pest-plugin-snapshots": "^1.1"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "pixelfear/composer-dist-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "Octoper\\HtmlMinify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Octoper\\HtmlMinify\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "HTML Minify",
            "description": "An addon to minify HTML for Statamic v3"
        },
        "laravel": {
            "providers": [
                "Octoper\\HtmlMinify\\HtmlMinifyServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
